<%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  <div class="content">
    <h2><%= recipe.title %></h2>
    <div id="ingredientsList">
      <% recipe.ingredients.forEach((el)=> { %>
      <p><%= el.ingredient + " " + el.qty + " " + el.qtyType %></p>
      <% }) %>
    </div>
    <div>
      <img src="/<%= recipe.image %>" alt="recipeImage" />
      <p><%= recipe.image %></p>
    </div>
    <div>
      <p><%= recipe.body %></p>
    </div>
  </div>
  <%- include("./partials/footer.ejs") %>
</body>
